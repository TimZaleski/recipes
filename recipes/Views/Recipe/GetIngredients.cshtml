@model IEnumerable<recipes.Models.Ingredient>

<p>
    <a asp-controller="Ingredient" asp-action="AddIngredient">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.ActionLink("Edit", "UpdateIngredient", "Ingredient", new { id = item.id }) |
                @Html.ActionLink("Delete", "DeleteIngredient", "Ingredient", new { id = item.id })
            </td>
        </tr>
}
    </tbody>
</table>
